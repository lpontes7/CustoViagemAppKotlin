<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <EditText
            android:id="@+id/editDistancia"
            style="@style/EditText"
            android:hint="@string/distancia"
    />
    <TextView
            style="@style/TextView"
            android:text="@string/totalEmKilometros"
    />

    <EditText
            android:id="@+id/editPreco"
            style="@style/EditText"
            android:hint="@string/preco"
    />
    <TextView
            style="@style/TextView"
            android:text="@string/precoPorLitro"
    />

    <EditText
            android:id="@+id/editAutonomia"
            style="@style/EditText"
            android:hint="@string/autonomia"
    />
    <TextView
            style="@style/TextView"
            android:text="@string/kilometrosPorLitro"
    />

    <TextView
            style="@style/TextView"
            android:text="@string/totalGastoSeraDe"
            android:layout_marginTop="40dp"
            android:textColor="@color/colorAccentDark"
    />

    <TextView
            android:id="@+id/textResultado"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/colorPrimaryDark"
            android:hint="@string/CifraoZeroReais"
            android:textAllCaps="true"
    />

    <Button
            android:id="@+id/butttonCalcular"
            style="@style/Button"
            android:hint="@string/calcular"
    />

</LinearLayout>